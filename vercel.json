{
    "version": 2,
    "builds": [
    {
      "src": "./main.py",
      "use": "@vercel/python"
    }
    ],
    "rewrites": [
    {
      "source": "/ask-ai",
      "destination": "/main.py",
      "methods": ["POST", "OPTIONS"]
    },
    {
      "source": "/(.*)",
      "destination": "/main.py"
    }
    ],
    "headers": [
      {
        "source": "/(.*)",
        "headers": [
          {
            "key": "Access-Control-Allow-Origin",
            "value": "*"
          },
          {
            "key": "Access-Control-Allow-Methods",
            "value": "POST, OPTIONS"
          },
          {
            "key": "Access-Control-Allow-Headers",
            "value": "Content-Type"
          },
          {
            "key": "Access-Control-Allow-Credentials",
            "value": "true"
          }
        ]
      }
    ]
}
  